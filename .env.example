# إعدادات البيئة - قرطبة للتوريدات
NODE_ENV=production

# إعدادات قاعدة البيانات
DATABASE_URL=postgresql://username:password@localhost:5432/qortoba_supplies

# إعدادات الخادم
PORT=3000
HOST=0.0.0.0

# مفتاح الجلسة (يجب أن يكون 32 حرف على الأقل)
SESSION_SECRET=your_very_secure_session_secret_here_minimum_32_characters

# إعدادات الأمان
BCRYPT_ROUNDS=12

# إعدادات DeepSeek AI (اختياري)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# إعدادات CORS (اختياري)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# إعدادات الرفع
MAX_FILE_SIZE=5242880

# إعدادات الجلسة
SESSION_MAX_AGE=86400000

# إعدادات التخزين السحابي (اختياري)
CLOUD_STORAGE_BUCKET=your-bucket-name