{
  "name": "qortoba-supplies-production",
  "version": "1.0.0",
  "description": "نظام إدارة التوريدات - قرطبة للتوريدات",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc server/index.ts --outDir dist/server --target es2020 --module commonjs",
    "build:client": "vite build",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "install:production": "npm ci --only=production"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "drizzle-orm": "^0.28.6",
    "bcrypt": "^5.1.1",
    "express-session": "^1.17.3",
    "connect-pg-simple": "^9.0.1",
    "nanoid": "^4.0.2",
    "zod": "^3.22.4",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express-session": "^1.17.7",
    "typescript": "^5.1.6",
    "drizzle-kit": "^0.19.13"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}